#include <stdio.h>
#include <stdint.h>

struct packet {

	uint8_t crc;
	uint8_t status;
	uint16_t payload;
	uint8_t bat;
	uint8_t sensor;
	uint8_t longAddr;
	uint8_t shortAddr;
	uint8_t addrMode;

};

int main() {

	uint32_t packetVal;
	printf("Enter the 32bit packet value:");
	scanf("%u", &packetVal);

	struct packet packet;



	getchar();

	return 0;
}


