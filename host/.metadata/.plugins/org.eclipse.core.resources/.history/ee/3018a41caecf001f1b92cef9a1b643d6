#include <stdio.h>

int main() {

	float num0, num1, num2;

	printf("Enter first number: \n");
	fflush(stdout);
	scanf("%f", &num0);

	printf("Enter second number: \n");
	scanf("%f", &num1);

	printf("Enter third number: \n");
	scanf("%f", &num2);

	float average = (num0 + num1 + num2) / 3;

	printf("Average is : %f\n", average);
}
