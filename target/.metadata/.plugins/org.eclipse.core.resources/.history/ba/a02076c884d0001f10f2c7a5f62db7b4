#include <stdint.h>

#if !defined(__SOFT_FP__) && defined(__ARM_FP)
  #warning "FPU is not initialized, but the project is compiling for an FPU. Please initialize the FPU before use."
#endif

int main(void)
{

	uint32_t* p_clkCtrlReg = (uint32_t*) 0x40023830;
	uint32_t* p_portDModeReg = (uint32_t*) 0x40020C00;
	uint32_t* p_portDOutReg = (uint32_t*) 0x40020C14;

	// enable clock for GPIOD peripheral in the AHB1ENR
	*p_clkCtrlReg |= 0x08;

	// configure the mode of IO pin as output
	// clear 24th and 25th bits
	*p_portDModeReg &= 0xFCFFFFFF;

	// make 24 bit position as 1 (SET)
	*p_portDModeReg |= 0x01000000;

	// SET 12th bit of output data reg to make IO pin-12 as HIGH
	*p_portDOutReg |= 0x1000;

    /* Loop forever */
	while(1);
}
